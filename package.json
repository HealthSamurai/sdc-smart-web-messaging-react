{
  "name": "sdc-smart-web-messaging-react",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "React hook and helpers for SDC SMART Web Messaging renderers.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianpos/sdc-smart-web-messaging-react.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "postbuild": "mkdir -p dist/LICENSES && cp vendor/sdc-smart-web-messaging/LICENSE dist/LICENSES/bsd-3-clause.txt",
    "dev": "vite",
    "lint": "biome check .",
    "test:browser": "playwright test",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tests/tsconfig.json --noEmit && tsc -p tsconfig.node.json --noEmit && tsc -p tests/tsconfig.node.json --noEmit"
  },
  "peerDependencies": {
    "@types/fhir": "^0.0.41",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
